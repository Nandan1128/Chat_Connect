<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="10dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/send_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This is Sent message"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:id="@+id/txt_sent_message"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_sent_time"
            android:layout_toEndOf="@id/txt_sent_message"
            android:textSize="10sp"
            android:textColor="#bfbfbf"/>
        <ImageView
            android:id="@+id/tick_status"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginStart="4dp"
            android:layout_toEndOf="@id/txt_sent_message"
            android:layout_below="@id/txt_sent_time"
            android:src="@drawable/ic_single_tick"/>
    </RelativeLayout>
</RelativeLayout>