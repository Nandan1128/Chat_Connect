<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#ffffff"
    android:padding="24dp"
    tools:context=".Data_Model.register">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center">

        <!-- App Logo -->
        <ImageView
            android:id="@+id/logo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/chatconnect_logo"
            android:layout_gravity="center"
            android:layout_marginBottom="32dp" />

        <!-- Glass Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_glass_card"
            android:padding="20dp"
            android:elevation="4dp"
            android:clipToOutline="true">

            <!-- Pseudonym -->
            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name"
                android:background="@drawable/edittext_bg"
                android:inputType="textPersonName"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:backgroundTint="#7FE0FF"
                android:drawableLeft="@drawable/baseline_person_24"
                android:drawablePadding="8dp"
                android:padding="12dp"
                android:layout_marginTop="16dp" />

            <EditText
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone Number"
                android:background="@drawable/edittext_bg"
                android:inputType="number"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:backgroundTint="#7FE0FF"
                android:drawableLeft="@drawable/phone"
                android:drawablePadding="8dp"
                android:padding="12dp"
                android:layout_marginTop="16dp" />

            <!-- Email -->
            <EditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_bg"
                android:hint="Email"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:backgroundTint="#7FE0FF"
                android:drawablePadding="8dp"
                android:drawableLeft="@drawable/outline_drafts_24"
                android:padding="12dp"
                android:layout_marginTop="20dp" />
            <!-- Password -->
            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:inputType="textPassword"
                android:background="@drawable/edittext_bg"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:backgroundTint="#7FE0FF"
                android:drawableLeft="@drawable/outline_cloud_lock_24"
                android:drawablePadding="8dp"
                android:padding="12dp"
                android:layout_marginTop="20dp" />

            <!-- Confirm Password -->
            <EditText
                android:id="@+id/et_confirm_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Confirm Password"
                android:background="@drawable/edittext_bg"
                android:inputType="text"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:backgroundTint="#7FE0FF"
                android:drawableLeft="@drawable/outline_cloud_lock_24"
                android:drawablePadding="8dp"
                android:padding="12dp"
                android:layout_marginTop="16dp" />



            <!-- Register Button -->
            <Button
                android:id="@+id/btn_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Register"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:backgroundTint="#0E8ACF"
                android:layout_marginTop="24dp"
                android:fontFamily="sans-serif-medium"
                android:padding="12dp" />
        </LinearLayout>

        <!-- Login link -->
        <TextView
            android:id="@+id/tv_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account? Login"
            android:textColor="#0E8ACF"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center" />
    </LinearLayout>
</ScrollView>