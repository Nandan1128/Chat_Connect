<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E1E1E"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center">

        <!-- App Logo -->
        <ImageView
            android:id="@+id/logo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/logo"
            android:layout_gravity="center"
            android:layout_marginBottom="32dp" />

        <!-- Glass Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_glass_card"
            android:padding="20dp"
            android:elevation="4dp"
            android:clipToOutline="true">

            <!-- Unique ID -->
            <EditText
                android:id="@+id/et_uid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Unique ID"
                android:inputType="text"
                android:enabled="false"
                android:textColor="#FFFFFF"
                android:textColorHint="#AAAAAA"
                android:backgroundTint="#7FE0FF"
                android:drawablePadding="8dp"
                android:padding="12dp" />

            <!-- Generate ID Button -->
            <Button
                android:id="@+id/btn_generate_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Generate ID"
                android:textAllCaps="false"
                android:backgroundTint="#0E8ACF"
                android:textColor="#FFFFFF"
                android:layout_marginTop="10dp" />

            <!-- Password -->
            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColor="#FFFFFF"
                android:textColorHint="#AAAAAA"
                android:backgroundTint="#7FE0FF"
                android:drawableLeft="@drawable/outline_cloud_lock_24"
                android:drawablePadding="8dp"
                android:padding="12dp"
                android:layout_marginTop="20dp" />

            <!-- Confirm Password -->
            <EditText
                android:id="@+id/et_confirm_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:textColor="#FFFFFF"
                android:textColorHint="#AAAAAA"
                android:backgroundTint="#7FE0FF"
                android:drawableLeft="@drawable/outline_cloud_lock_24"
                android:drawablePadding="8dp"
                android:padding="12dp"
                android:layout_marginTop="16dp" />

            <!-- Pseudonym -->
            <EditText
                android:id="@+id/et_pseudonym"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Pseudonym (optional)"
                android:inputType="textPersonName"
                android:textColor="#FFFFFF"
                android:textColorHint="#AAAAAA"
                android:backgroundTint="#7FE0FF"
                android:drawableLeft="@drawable/baseline_person_24"
                android:drawablePadding="8dp"
                android:padding="12dp"
                android:layout_marginTop="16dp" />

            <!-- Register Button -->
            <Button
                android:id="@+id/btn_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Register"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:backgroundTint="#0E8ACF"
                android:layout_marginTop="24dp"
                android:fontFamily="sans-serif-medium"
                android:padding="12dp" />
        </LinearLayout>

        <!-- Login link -->
        <TextView
            android:id="@+id/tv_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account? Login"
            android:textColor="#7FE0FF"
            android:textSize="14sp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center" />
    </LinearLayout>
</ScrollView>